            <div class="row">
                <div class="form-group col-lg-4">
                    <label class="control-label">Állásidő kezdete</label>
                    <input asp-for="BdStartdate" id="startdate" class="form-control" placeholder="Mikor kezdődött?" required />
                    <span asp-validation-for="BdStartdate" class="text-danger"></span>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>


                <div class="form-group col-lg-4">
                    <label class="control-label">Állásidő vége</label>
                    <input asp-for="BdStopdate" id="enddate" class="form-control" placeholder="Mikor fejeződött be?" />
                    <span asp-validation-for="BdStopdate" class="text-danger"></span>
                </div>

                <div class="form-group col-lg-4">
                    <label class="control-label">Állásidő (perc)</label>
                    <input type="text" id="result" name="result" class="form-control" placeholder="Automatán kiszámolódik" readonly />

                    <script>
                        function calculate() {
                            var start = new Date(document.getElementById("startdate").value);
                            var end = new Date(document.getElementById("enddate").value);
                            if (start && end) {

                                var diffInMs = (end - start);

                                var diffInMin = Math.floor((diffInMs / 1000) / 60);
                                document.getElementById("result").value = diffInMin;
                            }
                        }
                        document.getElementById("startdate").addEventListener("change", calculate);
                        document.getElementById("enddate").addEventListener("change", calculate);
                    </script>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-lg-4">
