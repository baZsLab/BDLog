                        }
                        @foreach (SelectListItem item in (IEnumerable<SelectListItem>)ViewData["BdPaperok"])
                        {
                            paperstr = "paperno" + item.Value;
                            @Html.RadioButtonFor(Model => Model.BdPaperok, item.Value, new { id = paperstr, @class = "btn-check" })

